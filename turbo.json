{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["@repo/config-typescript", ".env"],
  "globalEnv": [
    "NODE_ENV",
    "NEXT_PUBLIC_APP_URL",
    "NEXT_PUBLIC_BASE_URL",
    "PORT",
    "BASE_URL",
    "API_URL",
    "API_TIMEOUT",
    "AUTH_SECRET",
    "AUTH_GOOGLE_CLIENT_ID",
    "AUTH_GOOGLE_SECRET",
    "DATABASE_URL",
    "SUPABASE_URL",
    "NEXT_PUBLIC_SUPABASE_URL",
    "SUPABASE_ANON_KEY",
    "SUPABASE_SERVICE_ROLE_KEY",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY",
    "NEXT_PUBLIC_ENABLE_ANALYTICS",
    "NEXT_PUBLIC_AUTH_EMAIL_ENABLED",
    "NEXT_PUBLIC_AUTH_GOOGLE_ENABLED",
    "NEXT_PUBLIC_AUTH_DISCORD_ENABLED",
    "RATE_LIMIT_API_WINDOW_MS",
    "RATE_LIMIT_API_MAX_REQUESTS",
    "RATE_LIMIT_API_FAILURE_THRESHOLD",
    "RATE_LIMIT_AUTH_WINDOW_MS",
    "RATE_LIMIT_AUTH_MAX_ATTEMPTS",
    "REDIS_URL",
    "REDIS_PORT",
    "REDIS_USER",
    "REDIS_PASSWORD",
    "REDIS_TLS",
    "REDIS_MAX_RETRIES",
    "REDIS_RETRY_STRATEGY",
    "REDIS_ENABLE_OFFLINE_QUEUE",
    "REDIS_CONNECT_TIMEOUT",
    "STRIPE_SECRET_KEY",
    "STRIPE_WEBHOOK_SECRET",
    "STRIPE_PRICE_ID"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "type-check"],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "src/**/*.css",
        "package.json",
        "tsconfig.json",
        ".env*"
      ],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "clean": {
      "cache": false,
      "outputs": []
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^build"],
      "persistent": true
    },
    "lint": {
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "src/**/*.js", ".eslintrc.*", "package.json"],
      "outputs": []
    },
    "setup": {
      "dependsOn": ["^setup"],
      "outputs": []
    },
    "start": {
      "cache": false,
      "dependsOn": ["build"],
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx", "package.json"]
    },
    "type-check": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "tsconfig.json"],
      "outputs": []
    }
  },
  "ui": "stream"
}
